{
  "manifest_version": 3,
  "name": "YouTube Link Extractor",
  "version": "1.0",
  "description": "Extract video links and metadata from YouTube.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["output.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
